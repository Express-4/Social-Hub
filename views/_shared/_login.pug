mixin login
    if (user)
        form
        ul.nav.navbar-nav.navbar-right
            if  user.avatarPath
                li
                    img.small-avatar(src='/static/imgs/avatar.png')
            else
                li
                    img.small-avatar(src=user.avatarPath)
            li
                a(href='/profile/' + user.username)
                    =user.username
            li
                a(href='/auth/sign-out') 
                    | Log off
    else
        ul.nav.navbar-nav.navbar-right
            li
                a(href='/auth/sign-up')
                    | Register
            li
                a(href='/auth/sign-in')
                    | Login