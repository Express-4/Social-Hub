doctype html
html
  head
    title Social Hub Chat
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding-top: 30px; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      #messages { margin-bottom: 40px }
      #chatHeader { position: fixed; top: 0px; width:100%; height: 30px; background: #82E0FF; padding-left: 10%; padding-top: 5px; font-style: oblique; }
      a {padding-right: 30%;}
  body
    #chatHeader
      a(href='/') Return to Home page
      span#name #{user.username}
      |   , Welcome to our chat room.
    ul#messages
    form(action='')
      input#m(autocomplete='off')
      button Send
      script(src='/socket.io/socket.io.js')
      script(src='https://code.jquery.com/jquery-1.11.1.js')
      script(src='../../static/js/chatPoster.js')