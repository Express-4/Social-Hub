extends ../_shared/_master
block body
        h3 
            | Create a new account.
        if errors
            div.alert.alert-danger(role="alert")
                ul
                    for error in errors
                        li= error.msg
        form.form-horizontal(action='/auth/sign-up', method="POST", role='form')
            div.form-group
                label.col-md-2.control-label(for='username')
                    | Username
                div.col-md-10
                    input.form-control(type="text" name="username" value=validated.username || '')
            div.form-group
                label.col-md-2.control-label(for='email')
                    | Email
                div.col-md-10
                    input.form-control(type="text" name="email" value=validated.email || '')
            div.form-group
                label.col-md-2.control-label(for='password')
                    | Password
                div.col-md-10
                    input.form-control(type="password" name="password")
            div.form-group
                label.col-md-2.control-label(for='confirmpassword')
                    | Confirm Password
                div.col-md-10
                    input.form-control(type="password" name="confirmpassword")
            div.form-group
                div.col-md-offset-2.col-md-10
                    input.btn.btn-default(type='submit', value='Register')