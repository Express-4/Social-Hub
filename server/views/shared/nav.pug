nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Home
    #bs-example-navbar-collapse-2.collapse.navbar-collapse
      ul.nav.navbar-nav
        li.active
          a(href='/About')
            | About 
            span.sr-only (current)
        li
          a(href='/about') About
      form.navbar-form.navbar-left(role='search')
        .form-group
          input.form-control(type='text', placeholder='Search')
        button.btn.btn-default(type='submit') Submit
      ul.nav.navbar-nav.navbar-right
        if (currentUser)
          li
            span= currentUser.username
          li
            form#logout-form(method="post" action="/users/logout")
              li
                a(href="javascript:document.getElementById('logout-form').submit()") Logout
        else 
          li
            a(href="/users/register") Register
          li
            a(href="/users/login") Log In
        if (globalError)
          h3= globalError
